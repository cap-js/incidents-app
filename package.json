{
  "name": "@capire/incidents",
  "version": "1.0.0",
  "dependencies": {
    "@sap/cds": ">=7",
    "express": "^4",
    "@sap/cds-hana": "^2",
    "@sap/xssec": "^3",
    "passport": "^0",
    "@sap/ams": "^1.18.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.0.1",
    "@sap/ams-dev": "^1.3",
    "@sap/cds-dk": "^8",
    "@sap/ux-specification": "^1.108.4",
    "axios": "^1.4.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "jest": "^29.5.0"
  },
  "scripts": {
    "watch": "cds watch",
    "start": "cds-serve",
    "test": "npx jest --silent"
  },
  "private": true,
  "sapux": [
    "app/incidents"
  ],
  "cds": {
    "requires": {
      "incidents-app": {
        "model": "@capire/incidents"
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "ias"
        }
      },
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "alice": {
              "policies": [
                "cap.support"
              ]
            },
            "bob": {}
          },
          "ams": {
            "autoCompile": true,
            "cache": {
              "TTL": 0
            }
          }
        }
      },
      "db": {
        "kind": "sql"
      },
      "html5-repo": true,
      "destinations": true,
      "workzone": true
    }
  }
}
